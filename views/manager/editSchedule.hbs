<body>
    <form action="updateSchedule" method="POST">
        <input type="hidden" name="txtId" value="{{schedule._id}}">
        Movie: <select name="movie">
            {{#each movies}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>
        <br>
        Cinema:<select name="cinema">
            {{#each cinemas}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>
        <br>
        Room: <select name="room">
            {{#each rooms}}
            <option value="{{name}}">{{name}}</option>
            {{/each}}
        </select>
        <br>
        Date: <input type="date" name="date" value="{{schedule.date}}"><br>
        Start Time: <input type="time" name="startTime" value="{{schedule.startTime}}"><br>
        <input type="submit" value="Set">
    </form>

    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-1">
                <h3>EDIT SCHEDULE</h3>
                <a href="viewSchedule">Back</a>
                <form action="updateSchedule" method="POST">
                    <input type="hidden" name="txtId" value="{{schedule._id}}">
                    <div class="form-group">
                        Movie: <select name="movie">
                            {{#each movies}}
                            <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        Cinema:<select name="cinema">
                            {{#each cinemas}}
                            <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        Room: <select name="room">
                            {{#each rooms}}
                            <option value="{{name}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <div class="form-group">
                        Date: <input class="form-control" type="date" name="date" value="{{schedule.date}}"><br>
                    </div>
                    <div class="form-group">
                        Start Time: <input class="form-control" type="time" name="startTime"
                            value="{{schedule.startTime}}">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit" value="Edit Schedule" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="../js/jquery.min.js"></script>
    <script src="../js/popper.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/main.js"></script>
</body>

</html>