    <script>
        const checkLogin = document.getElementById("customer").value;

        var btnChange = document.getElementById('change');
        btnChange.addEventListener('click', function () {
            if(checkLogin == ""){
                alert("Pls Login")
            }else{
            var ajax = new XMLHttpRequest();
            ajax.open("POST", "changeSnack", true);
            ajax.setRequestHeader("Content-Type", "application/x-www-form-urlencoded");

            var snackId = document.querySelector("#snackId").value;
            var snackPoint = document.querySelector("#snackPoint").value;
            var snackName = document.querySelector("#snackName").value;

            ajax.send("snackId=" + snackId + "&snackPoint=" + snackPoint + "&snackName=" + snackName);      
            }
            
        }, false);
    </script>

