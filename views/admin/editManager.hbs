    <title>Document</title>
</head>

<body>
    <div class="container login-container">
        <div class="row">
            <div class="col-md-6 login-form-1">
                <h3>EDIT MANAGER</h3>
                <a href="viewManager">Back</a>
                <form action="updateManager" enctype="multipart/form-data" method="POST">
                    <input type="hidden" name="txtId" value="{{manager._id}}">
                    <div class="form-group">
                        Name <input type="text" class="form-control" name="txtName" value="{{manager.name}}" />
                    </div>
                    <div class="form-group">
                        Email <input class="form-control" type="email" name="txtEmail" value="{{manager.email}}" />
                    </div>
                    <div class="form-group">
                        Address <input type="text" class="form-control" name="txtAddress" value="{{manager.address}}" />
                    </div>
                    <div class="form-group">
                        Phone <input class="form-control" type="text" name="txtPhone" value="{{manager.phoneNumber}}">
                    </div>
                    <div class="form-group">
                        Age <input class="form-control" type="text" name="txtAge" value="{{manager.age}}">
                    </div>
                    <div class="form-group">
                        Img: <input class="form-control" type="file" name="myFile" id="">
                    </div>
                    <div class="form-group">
                        <input type="submit" class="btnSubmit" value="Edit Manager" />
                    </div>
                </form>
            </div>
        </div>
    </div>

    <script src="../js/jquery.min.js"></script>
    <script src="../js/popper.js"></script>
    <script src="../js/bootstrap.min.js"></script>
    <script src="../js/main.js"></script>
</body>

</html>